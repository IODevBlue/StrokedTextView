<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/main_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:theme="@style/Theme.StrokedTextView.AppBarOverlay"
        >

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/Theme.StrokedTextView.PopupOverlay">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/app_name"
                android:textColor="@color/white"
                />

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:verticalScrollbarPosition="right"
        android:scrollbarThumbVertical="@color/main_blue"
        android:scrollbarSize="2dp"
        android:layout_below="@id/main_appbar"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="100dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/ani"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_marginStart="30dp"
                android:fontFamily="@font/ani"
                />
            <com.blueiobase.api.android.strokedtextview.StrokedTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ani"
                android:gravity="center"
                android:textSize="50sp"
                android:fontFamily="@font/ani"
                android:layout_marginBottom="20dp"
                app:textStrokeColor="#AC656D"
                app:textStrokeWidth="7"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/asterix"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_marginStart="30dp"
                android:fontFamily="@font/asterix_blink"
                />
            <com.blueiobase.api.android.strokedtextview.StrokedTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/asterix"
                android:gravity="center"
                android:textSize="50sp"
                android:fontFamily="@font/asterix_blink"
                android:layout_marginBottom="20dp"
                app:textStrokeColor="#FF5722"
                app:textStrokeWidth="5"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/blackwood"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_marginStart="30dp"
                android:fontFamily="@font/blackwoodcastle"
                />
            <com.blueiobase.api.android.strokedtextview.StrokedTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/blackwood"
                android:gravity="center"
                android:textSize="50sp"
                android:fontFamily="@font/blackwoodcastle"
                android:layout_marginBottom="20dp"
                app:textStrokeColor="#2D44C1"
                app:textStrokeWidth="7"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/brydan"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_marginStart="30dp"
                android:fontFamily="@font/bryndan_write"
                />
            <com.blueiobase.api.android.strokedtextview.StrokedTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/brydan"
                android:gravity="center"
                android:textSize="50sp"
                android:fontFamily="@font/bryndan_write"
                android:layout_marginBottom="20dp"
                app:textStrokeColor="#E0F60A"
                app:textStrokeWidth="8"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/bungee"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_marginStart="30dp"
                android:fontFamily="@font/bungee_regular"
                />
            <com.blueiobase.api.android.strokedtextview.StrokedTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/bungee"
                android:gravity="center"
                android:textSize="40sp"
                android:fontFamily="@font/bungee_regular"
                android:layout_marginBottom="20dp"
                app:textStrokeColor="#EF9754"
                app:textStrokeWidth="5"
                />

        </LinearLayout>


    </ScrollView>

    <ImageButton
        android:id="@+id/github_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="50dp"
        android:layout_marginEnd="25dp"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:contentDescription="@string/image_button"
        android:src="@drawable/ic_github"
        android:background="@drawable/circle_bg"
        />
</RelativeLayout>